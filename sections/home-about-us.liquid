<div class="home-about-us {% if section.settings.style_title == 'style_2' %}style_2{% elsif section.settings.style_title == 'style_3' %}style_3{% endif %}{% if section.settings.title_sub != blank %} sub_title_padding{% endif %}{% if section.settings.style_about == 'style_2' %} style_about_2{% elsif section.settings.style_about == 'style_3' %} style_about_3{% elsif section.settings.style_about == 'style_4' %} style_about_4{% elsif section.settings.style_about == 'style_5' %} style_about_5{% elsif section.settings.style_about == 'style_6' %} style_about_6{% elsif section.settings.style_about == 'style_7' %} style_about_7{% elsif section.settings.style_about == 'style_8' %} style_about_8{% endif %}" id="home-about-{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-10 offset-lg-1">
        {% if section.settings.title != blank %}
            <h4 class="title">
              {% render 'multilang' with section.settings.title %}
            </h4>
        {% endif %}

        {% if section.settings.sub_img != blank %}
        <h3 class="sub-title">
          <img src="{{ section.settings.sub_img | img_url:'250x'}}"/>
        </h3>
        {% else %}
        {% if section.settings.title_sub != blank %}
            <h3 class="sub-title">
              {% render 'multilang' with section.settings.title_sub %}
            </h3>
        {% endif %}
        {% endif %}
        
        {% if section.settings.des != blank and section.settings.style_about != 'style_3' %}
            {% if section.settings.style_about != 'style_8' %}
                <div class="des af">
                  {{ section.settings.des }}
                </div>
            {% endif %}
        {% endif %}

        {% if section.settings.button_text != blank %}
            <a class="btn btn-about-us" href="{{ section.settings.button_text_link }}">{{ section.settings.button_text }}</a>
        {% endif %}
      </div>
    </div>
    {% if section.blocks.size > 0 %}
    <div class="list-item disable-srollbar">
        {% for block in section.blocks %}
            {% if block.settings.image != blank or block.settings.content != blank %}
            <div class="item column-{{section.blocks.size}}" id="item-{{block.id}}">
                {% if section.settings.style_about == 'style_5' or section.settings.style_about == 'style_8' %}
                    <div class="content-left">
                        {% if block.settings.icon_type == 'image' %}
                            {% if block.settings.image != blank %}
                            <div class="image">
                                <img data-srcset="{{ block.settings.image | img_url: '200x' }}" class="lazyload" alt="{{ block.settings.image.alt | default: shop.name }}" />
                            </div>
                            {% else %}
                                <a class="animate-scale" href="{{ block.settings.link }}">
                                    {% if section.settings.style_about == 'style_4' %}
                                        <div class="not_img">77 x 77px</div> 
                                    {% else %}
                                        <div class="not_img">48 x 48px</div> 
                                    {% endif %}    
                                </a>
                            {% endif %}
                        {% else %}
                            {% if block.settings.text_icon != blank %}
                            <div class="image">
                                {{ block.settings.text_icon }}
                            </div>
                            {% else %}
                                <a class="animate-scale" href="{{ block.settings.link }}">
                                </a>
                            {% endif %}
                        {% endif %}
                    </div>
                    <div class="content-right">
                        {% if block.settings.content != blank %}
                            <div class="content">
                                {{ block.settings.content }}
                            </div>
                        {% endif %}

                        {% if block.settings.content != blank %}
                            <p class="desctiption">{{ block.settings.description }}</p>
                        {% endif %}

                        {% if block.settings.text_button != blank %}
                            <a class="btn button_text" href="{{block.settings.link_icon}}">{{ block.settings.text_button }}</a>
                        {% endif %}
                    </div>
                {% else %}
                    <a {% unless block.settings.link_icon == blank %}href="{{block.settings.link_icon}}"{% endunless %}>
                    {% if block.settings.icon_type == 'image' %}
                        {% if block.settings.image != blank %}
                        <div class="image">
                            <img data-srcset="{{ block.settings.image | img_url: '200x' }}" class="lazyload" alt="{{ block.settings.image.alt | default: shop.name }}" />
                        </div>
                        {% else %}
                            <a class="animate-scale" href="{{ block.settings.link }}">
                                {% if section.settings.style_about == 'style_4' %}
                                    <div class="not_img">77 x 77px</div> 
                                {% elsif section.settings.style_about == 'style_6' %}
                                    <div class="not_img">70 x 235px</div> 
                                {% else %}
                                    <div class="not_img">48 x 48px</div> 
                                {% endif %}    
                            </a>
                        {% endif %}
                    {% else %}
                        {% if block.settings.text_icon != blank %}
                        <div class="image">
                            {{ block.settings.text_icon }}
                        </div>
                        {% else %}
                            <a class="animate-scale" href="{{ block.settings.link }}">
                            </a>
                        {% endif %}
                    {% endif %}

                    {% if block.settings.content != blank %}
                    <div class="content">
                        {{ block.settings.content }}
                    </div>
                    {% endif %}

                    {% if block.settings.content != blank %}
                    <p class="desctiption">{{ block.settings.description }}</p>
                    {% endif %}

                    {% if block.settings.text_button != blank %}
                    <a class="btn button_text" href="{{block.settings.link_icon}}">{{ block.settings.text_button }}</a>
                    {% endif %}

                    </a> 
                {% endif %}

                <style>
                    #item-{{block.id}} .button_text, #item-{{block.id}} .desctiption, #item-{{block.id}} .content p, #item-{{block.id}} .content a, #item-{{block.id}} .image svg, #item-{{block.id}} .image i {
                        color: {{ block.settings.color_content }};
                    }
                    .home-about-us.style_about_2 .list-item #item-{{block.id}} .content p:before {
                        background-color: {{ block.settings.color_content }};
                    }
                    .home-about-us.style_about_2 .list-item #item-{{block.id}} a:hover .content p:before {
                        background-color: {{ block.settings.color_content_hover }};
                    }
                    #item-{{block.id}} a:hover .content p, #item-{{block.id}} a:hover .image svg, #item-{{block.id}} a:hover .image i {
                        color: {{ block.settings.color_content_hover }};
                    }

                    {% if settings.layout_style == 'layout_style_1' %}
                        {% if settings.layout_home == 'layout_home_12' %}
                            .home-about-us #item-{{block.id}} .button_text {
                                text-decoration-color: {{ block.settings.color_content | color_modify: 'alpha', 0.3}} !important;
                            }
                            .home-about-us #item-{{block.id}} .button_text:hover {
                                color: {{ block.settings.color_content_hover }};
                                text-decoration-color: {{ block.settings.color_content_hover | color_modify: 'alpha', 0.3}} !important;
                            }
                        {% endif %}
                    {% endif %}

                </style>
            </div>
            {% endif %}
        {% endfor %}
    </div>
    {% endif %}
    {% if section.settings.des != blank %}
        {% if section.settings.style_about == 'style_3' or section.settings.style_about == 'style_8'%}
