<style>
    {% assign margin_bottom =  section.settings.margin_bottom %}
    {% assign margin_bottom_mb =  section.settings.margin_bottom_mb %}
    {% assign fontsize_title = section.settings.font_size_title %}
    {% assign fontsize_title_mb = section.settings.font_size_title_mb %}
    {% assign font_weight_title = section.settings.font_weight_title %}
    {% assign text_transform_title = section.settings.text_transform_title %}

    {% assign font_size_title_item = section.settings.font_size_title_item %}
    {% assign font_size_desc_item = section.settings.font_size_desc_item %}
    {% assign font_size_button_item = section.settings.font_size_button_item %}

    {% if section.settings.style_about == 'style_5' or  section.settings.style_about == 'style_8' %}
        {% if section.settings.bg_color != 'rgba(0,0,0,0)' or section.settings.image_bg_style_4 != blank %}
        #home-about-{{ section.id }} .container .list-item {
            background-color: {{ section.settings.bg_color }};
        }
        {% endif %}
    {% else %}
        {% if section.settings.bg_color != 'rgba(0,0,0,0)' or section.settings.image_bg_style_4 != blank %}
        #home-about-{{ section.id }} {
            {% if section.settings.image_bg_style_4 != blank %}
                background: url({{ section.settings.image_bg_style_4 | img_url: '1920x' }});
                background-repeat: repeat-x;
                background-size: cover;
            {% else %}
                background-color: {{ section.settings.bg_color }};
            {% endif %}
        }
        {% endif %}
    {% endif %}

    {% if section.settings.style_about == 'style_8' %}
        {% if section.settings.bg_color != 'rgba(0,0,0,0)' %}
            #home-about-{{ section.id }} .container .list-item {
                background-color: {{ section.settings.bg_color }};
            }
        {% else %}
            #home-about-{{ section.id }} .container .list-item {
                background: url({{ section.settings.image_bg_style_4 | img_url: '1920x' }});
                background-repeat: repeat-x;
                background-size: cover;
            }
        {% endif %}
        
    {% endif %}

    {% if section.settings.style_about == 'style_4' %}
        #home-about-{{ section.id }}.style_about_4 .title {
            margin-bottom: 0;
        }
    {% endif %}

    {% if section.settings.style_about == 'style_3' %}
        .home-about-us.style_2 .title {
            font-weight: bold;
        }
        .home-about-us.style_about_3 {
            padding: 56px 0 50px;
        }
    {% endif %}

    {% if section.settings.style_title == 'style_3' %}
        #home-about-{{ section.id }} .container .row {
            background-color: {{ section.settings.bg_color }};
        }
        #home-about-{{ section.id }} .des a {
            color: {{ section.settings.color_des }};
        }

    {% endif %}

    {% if section.settings.style_about == 'style_2' or section.settings.style_about == 'style_3' %}
        .home-about-us.style_about_2 .list-item .item {
            border-color: {{ section.settings.border_bg_color }};
        }
    {% endif %}
  
    #home-about-{{ section.id }} .title {
        {% if section.settings.color_title != 'rgba(0,0,0,0)' %}
            color: {{ section.settings.color_title }};
        {% endif %}    
        font-size: {{ section.settings.font_size_title }};
        font-weight: {{ font_weight_title }};
        text-transform: {{ text_transform_title }};
        {% if section.settings.title_sub == blank %}
            {% if section.settings.style_about == 'style_3' %}
                margin-bottom: 35px;
            {% elsif section.settings.style_about == 'style_8' %}
                margin-bottom: 15px;
            {% else %}
                margin-bottom: {{ section.settings.font_size_title }};
            {% endif %}
        {% else %}
            margin-bottom: 0;
        {% endif %}
    }

    #home-about-{{ section.id }} .sub-title {
        color: {{ section.settings.color_title_sub }};
        font-size: {{ section.settings.font_size_title_sub }};
    }
    
    #home-about-{{ section.id }} .des,
    #home-about-{{ section.id }} .des a {
        color: {{ section.settings.color_des }};
        font-size: {{ section.settings.font_size_des }};
    }
    {% if section.settings.style_about == 'style_8' %}
        #home-about-{{ section.id }} .des.des-bottom a {
            text-decoration-color: {{ section.settings.color_des | color_modify: 'alpha', 0.3}};
        }
    {% endif %}    

    #home-about-{{ section.id }} .btn-about-us {
        color: {{ section.settings.color_button }};
        border-color: {{ section.settings.color_border_button }};
        background-color: {{ section.settings.bg_color_button }};
    }
    {% if section.settings.font_size_title_item != blank %}
        #home-about-{{ section.id }} .list-item .item .content p {
            font-size: {{ font_size_title_item }}
        }
    {% endif %}
    {% if section.settings.font_size_desc_item != blank %}
        #home-about-{{ section.id }} .list-item .item .desctiption {
            font-size: {{ font_size_desc_item }}
        }
    {% endif %}
    {% if section.settings.font_size_button_item != blank %}
        #home-about-{{ section.id }} .list-item .item .button_text {
            font-size: {{ font_size_button_item }} !important;
        }
    {% endif %}

    @media (min-width: 768px) {
        #home-about-{{ section.id }} {
            margin-bottom: {{ margin_bottom }}px;
        }
    }

    {% unless section.settings.display_border_top %}
    #home-about-{{ section.id }} {
        border-top: none;
    }
    {% endunless %}

    .home-about-us.style_about_3 .list-item .item {
        background-color: {{ section.settings.bg_color_item_style_3 }}
    }

    @media (max-width: 767px) {
        #home-about-{{ section.id }} .title {
            font-size: {{ section.settings.font_size_title_mb }};
        }

        #home-about-{{ section.id }} {
            margin-bottom: {{ margin_bottom_mb }}px;
        }
    }
</style>



